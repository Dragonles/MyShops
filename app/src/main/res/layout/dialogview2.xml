<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_oldpwd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="旧密码:"
        android:textSize="22sp"
        android:paddingTop="10dp"/>

    <EditText
        android:layout_width="200dp"
        android:id="@+id/et_oldpwd"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/tv_oldpwd"/>

    <TextView
        android:id="@+id/tv_newpwd"
        android:layout_below="@+id/tv_oldpwd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="新密码:"
        android:textSize="22sp"
        android:paddingTop="20dp"/>

    <EditText
        android:layout_below="@+id/et_oldpwd"
        android:layout_width="200dp"
        android:id="@+id/et_newpwd"
        android:gravity="left"
        android:layout_toRightOf="@+id/tv_newpwd"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/tv_newpwd_algin"
        android:layout_below="@+id/tv_newpwd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="确认密码:"
        android:textSize="22sp"
        android:paddingTop="20dp"/>

    <EditText
        android:layout_below="@+id/et_newpwd"
        android:layout_width="200dp"
        android:id="@+id/et_newpwd_algin"
        android:gravity="left"
        android:layout_toRightOf="@+id/tv_newpwd_algin"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

</RelativeLayout>
