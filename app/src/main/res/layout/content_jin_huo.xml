<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myshops.shops.myshops.JinHuoActivity"
    tools:showIn="@layout/activity_jin_huo">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/jinhuo_top"
        android:layout_height="@dimen/fenlei_height"
        android:orientation="horizontal"
        android:background="@color/toolbar">
        <LinearLayout
            android:layout_width="40dp"
            android:paddingTop="5dp"
            android:paddingLeft="-20dp"
            android:paddingBottom="5dp"
            android:paddingRight="-20dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/goBacks"
                android:src="@drawable/back"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/fenlei"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ziti_Size"
                android:textColor="@color/ziti_color"
                android:text="@string/jinhuojilu"/>
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jinhuo_top"
        android:background="#F5F5F5"
        android:id="@+id/jinhuojilu_listView"></ListView>
</RelativeLayout>
