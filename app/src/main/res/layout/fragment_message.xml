<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myshops.shops.fragment.MessageFragment">

    <!-- 顶部 -->
    <RelativeLayout
        android:id="@+id/xx_top"
        android:background="#ef5b5b"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <!--<ImageButton-->
        <!--android:id="@+id/back"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="@drawable/back"/>-->
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:text="消息中心"/>


    </RelativeLayout>

    <!-- 导航 -->
    <RadioGroup
        android:id="@+id/xx_top_daohang"
        android:layout_below="@id/xx_top"
        android:background="#FFF"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:gravity="center"
            android:id="@+id/rb_mesg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:text="聊天消息"
            android:textSize="18sp"
            android:textColor="#2C2C2C"/>
        <RadioButton
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/rb_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:background="#FFF"
            android:layout_weight="1"
            android:text="微店商圈"
            android:textSize="18sp"
            android:textColor="#2C2C2C"/>
        <RadioButton
            android:gravity="center"
            android:id="@+id/rb_evaluate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:background="#FFF"
            android:layout_weight="1"
            android:text="评价管理"
            android:textSize="18sp"
            android:textColor="#2C2C2C"/>
        <RadioButton
            android:gravity="center"
            android:id="@+id/rb_client"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:background="#FFF"
            android:layout_weight="1"
            android:text="客户管理"
            android:textSize="18sp"
            android:textColor="#2C2C2C"/>

    </RadioGroup>

    <!-- Fragment 父布局 -->
    <FrameLayout
        android:id="@+id/fragment_parent"
        android:layout_below="@id/xx_top_daohang"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>
