<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/line01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_usericon"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <TextView
            android:id="@+id/txt_username"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_usericon"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#756B6E"
            android:textSize="16sp"
            android:text="苍老师"/>
        <TextView
            android:id="@+id/txt_userlevel"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_username"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#98DF30"
            android:textSize="16sp"
            android:text="vip 2"/>
        <TextView
            android:id="@+id/txt_ping"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#2c2c2c"
            android:text="好评"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_com"
        android:layout_below="@id/line01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:textColor="#B4AAAD"
        android:textSize="14sp"
        android:text="很好，非常好" />

    <RelativeLayout
        android:id="@+id/lin02"
        android:layout_below="@id/txt_com"
        android:layout_marginLeft="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B4AAAD"
            android:textSize="14sp"
            android:text="铝合金井盖"/>
        <TextView
            android:id="@+id/txt_setmeal"
            android:layout_toRightOf="@id/txt_product"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B4AAAD"
            android:textSize="14sp"
            android:text="官方标配"/>
        <TextView
            android:id="@+id/txt_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B4AAAD"
            android:textSize="14sp"
            android:text="2015-12-12"/>
    </RelativeLayout>

</RelativeLayout>
