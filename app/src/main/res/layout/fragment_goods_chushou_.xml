<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:id="@+id/chushou_top"
        android:layout_height="40dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/linearout_data"
        android:layout_height="match_parent">

    <TextView
        android:text="添加时间"
        android:id="@+id/text_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/linearout_xiaoliang"
        android:layout_height="match_parent">

    <TextView
        android:text="销量"
        android:id="@+id/text_xiaoliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/linearout_kucun"
        android:layout_height="match_parent">

    <TextView
        android:text="库存"
        android:id="@+id/text_kucun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="445dp"
    android:orientation="vertical"
    android:layout_below="@+id/chushou_top"
    android:id="@+id/linearout_listView">
    <com.myshops.shops.pulltorefresh.PullToRefreshLayout
    android:id="@+id/rotate_header_web_view_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include layout="@layout/refresh_head" />
    <com.myshops.shops.pulltorefresh.pullableview.PullableListView
    android:id="@+id/listView_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:divider="@color/list_button_xian"
    android:dividerHeight="0.2dp" />
    <include layout="@layout/load_more" />
    </com.myshops.shops.pulltorefresh.PullToRefreshLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@+id/linearout_listView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加新商品"
            android:drawableLeft="@drawable/ic_mygoods_add"
            android:textColor="@color/public_font_color"
            android:textSize="18sp"
            android:id="@+id/btn_add_shangpins"
            android:background="@null"/>
        </LinearLayout>
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout2"
        android:background="#ddd"/>
</RelativeLayout>





