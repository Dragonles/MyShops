<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/linearout_img"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/shouru_img"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/home_baby_img"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/linearout_img"
            android:id="@+id/linearout_jinhuo_shuxing"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/jinhuo_img"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearout_jinhuo_title">
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/jinhuo_color3"
                        android:id="@+id/shouru_title"
                        android:text="韩版卫衣外套潮"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/jinhuo_shuxing"
                    android:layout_below="@+id/linearout_jinhuo_title"
                    android:layout_toRightOf="@+id/jinhuo_img"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/jinhuo_color1"
                        android:textSize="12sp"
                        android:text="颜色："/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_color"
                        android:id="@+id/shouru_color"
                        android:textColor="@color/jinhuo_color1"
                        android:textSize="12sp"
                        android:text="深灰(现货)"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_below="@id/txt_color"
                        android:id="@+id/txt_ch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/jinhuo_color1"
                        android:textSize="12sp"
                        android:text="尺码："/>
                    <TextView
                        android:layout_toRightOf="@id/txt_ch"
                        android:layout_alignTop="@id/txt_ch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shouru_size"
                        android:textColor="@color/jinhuo_color1"
                        android:textSize="12sp"
                        android:text=" L"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/jinhuo_color2"
                        android:textSize="15sp"
                        android:text="现价：￥"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shouru_nowPrice"
                        android:textSize="15sp"
                        android:textColor="@color/jinhuo_color2"
                        android:text="45"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/jinhuo_color2"
                        android:text="原价：￥"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/jinhuo_color2"
                        android:layout_height="wrap_content"
                        android:id="@+id/shouru_oldPrice"
                        android:text="30"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/shouru_count"
                        android:textColor="@color/jinhuo_color2"
                        android:text="×1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/linearout_img"
            android:layout_below="@+id/linearout_jinhuo_shuxing">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/shouru_flag"
                    android:textColor="@color/jinhuo_color4"
                    android:text="进货"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
