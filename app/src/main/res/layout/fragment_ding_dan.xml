<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.myshops.shops.fragment.DingDanFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.alter.myshop.MMyDingdanActivity">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/top_linea"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/style_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="我的订单"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rly_left"
            android:layout_below="@id/top_linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/ddtabs"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="48dip"
                android:layout_alignParentTop="true"
                app:pstsIndicatorHeight="2dp"
                app:pstsIndicatorColor="#e9461a"
                />

            <android.support.v4.view.ViewPager
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:id="@+id/viewpager_dd"
                android:layout_below="@id/ddtabs"
                android:layout_alignParentLeft="true" />
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/listViews"
            android:layout_below="@id/rly_left"
            android:layout_height="wrap_content"></ListView>
    </RelativeLayout>
</FrameLayout>
