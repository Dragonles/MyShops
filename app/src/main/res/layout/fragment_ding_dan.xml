<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.myshops.shops.fragment.DingDanFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.alter.myshop.MMyDingdanActivity">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/top_linea"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/style_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="我的订单"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rly_left"
            android:layout_below="@id/top_linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <me.xiaopan.psts.PagerSlidingTabStrip
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slidingTabStrip"
                app:slidingBlock="@drawable/image_sliding_block"
                app:allowWidthFull="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/text_slidingTabTitle"
                        android:text="全部订单"/>
                    <TextView
                        style="@style/text_slidingTabTitle"
                        android:text="待发货"/>
                    <TextView
                        style="@style/text_slidingTabTitle"
                        android:text="已发货"/>
                    <TextView
                        style="@style/text_slidingTabTitle"
                        android:text="已完成"/>
                    <TextView
                        style="@style/text_slidingTabTitle"
                        android:text="退款中"/>
                    <TextView
                        style="@style/text_slidingTabTitle"
                        android:text="已退款"/>

                </LinearLayout>
            </me.xiaopan.psts.PagerSlidingTabStrip>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>



