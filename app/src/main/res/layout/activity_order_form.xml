<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/public_toolbar_color" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ib_orderform_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户三的订单"
                android:textSize="25sp"
                android:textColor="#FFF"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买客户："
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:id="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户三"
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:id="@+id/tv_orderform_username"
                    android:layout_alignTop="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买商品："
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView2"
                    android:layout_below="@+id/textView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鼠标"
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:id="@+id/tv_orderform_goodsname"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_alignLeft="@+id/tv_orderform_username"
                    android:layout_alignStart="@+id/tv_orderform_username" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量："
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView2"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2件"
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:id="@+id/tv_orderform_howmany"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_alignLeft="@+id/tv_orderform_goodsname"
                    android:layout_alignStart="@+id/tv_orderform_goodsname" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买日期："
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/textView3"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-12-18"
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:id="@+id/tv_orderform_data"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_alignLeft="@+id/tv_orderform_howmany"
                    android:layout_alignStart="@+id/tv_orderform_howmany" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款金额："
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/textView4"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100元"
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:id="@+id/tv_orderform_howmuch"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_alignLeft="@+id/tv_orderform_data"
                    android:layout_alignStart="@+id/tv_orderform_data" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款状态："
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付款"
                    android:textColor="@color/public_warn_color"
                    android:textSize="15sp"
                    android:id="@+id/tv_orderform_paystate"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_alignLeft="@+id/tv_orderform_howmuch"
                    android:layout_alignStart="@+id/tv_orderform_howmuch" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品状态："
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/textView6"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未发货"
                    android:textColor="@color/public_toolbar_color"
                    android:textSize="15sp"
                    android:id="@+id/tv_orderfrom_goodsstate"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_alignLeft="@+id/tv_orderform_paystate"
                    android:layout_alignStart="@+id/tv_orderform_paystate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否退款："
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/textView7"
                    android:layout_alignLeft="@+id/textView7"
                    android:layout_alignStart="@+id/textView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/public_font_color"
                    android:textSize="15sp"
                    android:id="@+id/tv_orderform_isreimburse"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_alignLeft="@+id/tv_orderfrom_goodsstate"
                    android:layout_alignStart="@+id/tv_orderfrom_goodsstate" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/iv_orderform_header"
                    android:layout_marginRight="37dp"
                    android:layout_marginEnd="37dp"
                    android:src="@drawable/iconfont_picfill"
                    android:layout_alignTop="@+id/tv_orderform_username"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="点击发货"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:id="@+id/btn_shopinfo_exit"
            android:background="@color/public_toolbar_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
