<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:id="@+id/relative_img"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/shangpin_img"
                android:background="@drawable/home_baby_img"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_toRightOf="@+id/relative_img" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/xiaoshou_name"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp"
                android:textColor="@color/public_font_color"
                android:text="无限鼠标" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/public_font_color"
                    android:text="价格："/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/public_font_color"
                    android:id="@+id/xiaoshou_pirce"
                    android:layout_height="wrap_content"
                    android:text="100元"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/xiaoshou_data"
                android:textColor="@color/public_font_color"
                android:text="2015-11-11" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/public_font_color"
                    android:text="数量："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/xiaoshou_count"
                    android:textColor="@color/public_font_color"
                    android:text="100件"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
