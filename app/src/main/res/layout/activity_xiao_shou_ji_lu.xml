<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFF"
    tools:context="com.myshops.shops.myshops.XiaoShouJiLuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/xiaoshou_top"
        android:layout_height="@dimen/fenlei_height"
        android:orientation="horizontal"
        android:background="@color/toolbar">
        <LinearLayout
            android:layout_width="40dp"
            android:paddingTop="5dp"
            android:paddingLeft="-20dp"
            android:paddingBottom="5dp"
            android:paddingRight="-20dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/goBackss"
                android:src="@drawable/backs"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/fenlei"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ziti_Size"
                android:textColor="@color/ziti_color"
                android:text="@string/xiaoshoujilu"/>
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:id="@+id/xiaoshou_listView"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xiaoshou_top"></ListView>


</RelativeLayout>
