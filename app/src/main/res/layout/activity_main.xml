<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-10dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:background="#FFF"
        android:layout_alignParentBottom="true">

        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/nav1_radio_button_style"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:checked="false" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/nav2_radio_button_style"
            android:button="@null"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:id="@+id/message"
            android:gravity="center"
            android:checked="false" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/per"
            android:button="@null"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/nav3_radio_button_style"
            android:gravity="center"
            android:checked="false" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dingdan"
            android:button="@null"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/nav4_radio_button_style"
            android:gravity="center"
            android:checked="false" />
    </RadioGroup>
</RelativeLayout>