<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp">

    <ImageView
        android:id="@+id/iv_tupian"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/tupians"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_tupian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="龙龙"
        android:textSize="20sp"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/tv_spname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称："
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_tupian"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"/>
    <TextView
        android:id="@+id/tv_spname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阿玛尼手表"
        android:layout_toRightOf="@+id/tv_spname"
        android:layout_below="@+id/tv_name"
        android:paddingTop="20dp"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易金额："
        android:layout_below="@+id/tv_spname"
        android:layout_toRightOf="@+id/iv_tupian"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/tv_money1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$888"
        android:textColor="#f00"
        android:layout_toRightOf="@+id/tv_money"
        android:layout_below="@+id/tv_spname"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未发货"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"/>
    <TextView
        android:id="@+id/tv_shuliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量："
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_spname1"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_shuliang"
        android:paddingTop="20dp"/>
    <TextView
        android:id="@+id/tv_zhuangtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态： "
        android:layout_below="@+id/tv_shuliang"
        android:layout_toRightOf="@+id/tv_money1"
        android:paddingLeft="58dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成"
        android:layout_toRightOf="@+id/tv_zhuangtai"
        android:layout_below="@+id/tv_number"/>

</RelativeLayout>
