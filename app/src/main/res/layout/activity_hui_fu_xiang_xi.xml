<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise">

    <!-- Top -->
    <LinearLayout
        android:id="@+id/huifu_top"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:background="@color/style_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="回复详情"/>
    </LinearLayout>
    <!-- Top End -->

    <RelativeLayout
        android:layout_below="@id/huifu_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linear01"
            android:layout_marginLeft="26dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#000"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textColor="@color/public_font_color"
                android:textSize="16sp"
                android:text="用户名称"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_pinjia"
            android:layout_width="match_parent"
            android:layout_below="@id/linear01"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="74dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/public_font_color"
            android:textSize="16sp"
            android:text="评价内容"/>


        <TextView
            android:id="@+id/txt_datas"
            android:layout_below="@id/txt_pinjia"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/txt_pinjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_font_color"
            android:textSize="14sp"
            android:text="2015-12-12"/>
        <TextView
            android:id="@+id/txt_hufu"
            android:layout_below="@id/txt_pinjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/public_font_color"
            android:textSize="16sp"
            android:text="回复"/>

        <ListView
            android:id="@+id/listview_pinlun"
            android:layout_below="@id/txt_hufu"
            android:layout_marginLeft="74dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </RelativeLayout>

    <!-- EditText -->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:background="@color/white">
        <EditText
            android:id="@+id/edit_pinglun"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:hint="写评论"/>
        <Button
            android:id="@+id/btn_submit"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="提交"/>
    </LinearLayout>



</RelativeLayout>
