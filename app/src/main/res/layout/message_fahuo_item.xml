<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rly_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/iv_tupian"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/tupian"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_tupian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小苍老师"
            android:paddingLeft="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_neirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您购买的井盖已经发货"
            android:layout_toRightOf="@+id/iv_tupian"
            android:layout_below="@+id/tv_name"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/tv_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待发货"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"/>

        <Button
            android:layout_below="@+id/tv_zhuangtai"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="发货"
            android:background="@null"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rly_message"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E6E6"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
